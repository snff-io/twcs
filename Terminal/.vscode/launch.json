    "version": "0.2.0",
    "configurations": [
        {
            "name": "World",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "world",
            "program": "${workspaceFolder}/World/bin/Debug/net8.0/World.dll",
            "args": [],
            "cwd": "${workspaceFolder}/World",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
